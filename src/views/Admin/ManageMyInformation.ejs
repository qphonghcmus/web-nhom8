<div class="content-box-list-subscriber">
    <div class="content-box-list-subscriber-header p-sm-0 shadow-sm">
        <div class="content-box-title">
            <p>Thông tin cá nhân</p>
        </div>

        <div class="content-box-tool">
            <a>
                <i class="fa fa-caret-down" aria-hidden="true"></i>
            </a>
        </div>
        <div class="clearfix"></div>
    </div>

    <div class="content-box-list-subscriber-content shadow p-4 mb-4 bg-white">
        <form action="/administrator/my-information" method="POST" id="information-form">
            <label for="email">Email: </label>
            <input readonly class="form-control" type="text" placeholder="Username" name="email"
                value="<%=authUser.email%>">
            <br>
            <label for="fullname">Họ tên: </label>
            <input class="form-control" type="text" placeholder="Nhập họ tên" name="fullname"
                value="<%=authUser.hoTen%>">
            <br>

            <label for="sdt">SĐT: </label>
            <input class="form-control" type="text" placeholder="Nhập sđt" name="sdt"
                value="<%=authUser.phoneNumber%>">
            <br>
            <label for="">Cập nhật mật khẩu: </label>
            <br>
            <label for="password_present">Mật khẩu hiện tại: </label>
            <input type="password" class="form-control" type="text" placeholder="Mật khẩu hiện tại" name="password_present">
            <br>
            <label for="password_new">Mật khẩu mới: </label>
            <input type="password" class="form-control" type="text" placeholder="Mật khẩu mới" name="password_new">
            <br>
            <label for="confirm">Nhập lại mật khẩu mới: </label>
            <input type="password" class="form-control" type="text" placeholder="Mật khẩu hiện tại" name="confirm">
            <br>
            <div class="form-group position-button">
                <div>
                    <input type="submit" class="btn btn-primary" value="Cập nhật">
                </div>
            </div>
        </form>
    </div>
</div>