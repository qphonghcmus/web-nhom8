<!DOCTYPE html>
<html lang="en">

<head>
    <title>Báo điện tử - Nhóm 8</title>
    <%- include('../layouts/TrangChu/head') -%>
</head>

<body>
    <%- include('../layouts/TrangChu/navbar')%>
    <!-- ##### Hero Area Start ##### -->
    <div class="hero-area owl-carousel custom-carousel">

        <% for(var i = 0; i < top4viewsnews.length; i++) {%>
            <!-- Single Blog Post -->
            <div class="hero-blog-post bg-img bg-overlay" style="background-image: url(<%=top4viewsnews[i].imagePath%>);">
                <div class="container h-100">
                    <div class="row h-100 align-items-center">
                        <div class="col-12">
                            <!-- Post Contetnt -->
                            <div class="post-content text-center">
                                <div class="post-meta" data-animation="fadeInUp" data-delay="100ms">
                                    <a href="#"><%= daydiff[i] %> Ngày trước</a>
                                    <a href="archive.html"><%= top4viewsnews[i].tenChuyenMuc %></a>
                                </div>
                                <a href="#" class="post-title" data-animation="fadeInUp" data-delay="300ms">
                                    <%= top4viewsnews[i].tieuDe %>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
    <!-- ##### Hero Area End ##### -->

    <!-- ##### Mag Posts Area Start ##### -->
    <section class="mag-posts-area d-flex flex-wrap">

        <!-- >>>>>>>>>>>>>>>>>>>>
         Post Left Sidebar Area
        <<<<<<<<<<<<<<<<<<<<< -->
        <div class="post-sidebar-area left-sidebar mt-30 mb-30 bg-white box-shadow">
            <!-- Sidebar Widget -->
            <div class="single-sidebar-widget p-30">
                <!-- Section Title -->
                <div class="section-heading">
                    <h5>BÀI VIẾT MỚI NHẤT</h5>
                </div>

                <!-- Single Blog Post -->
                <%for(var i=0;i<10;i++){%>
                <div class="single-blog-post d-flex">
                    <div class="post-thumbnail">
                        <img src="<%=list[i].imagePath%>" alt="">
                    </div>
                    <div class="post-content">
                        <a href="single-post.html" class="post-title"><%=list[i].tieuDe%></a>
                        <div class="post-meta">
                            <a href="#" class="post-cata"><%=list[i].tenChuyenMuc%></a>
                            <a>-</a>
                            <a href="#"><%= moment(list[i].ngayDang).format("DD-MM-YYYY HH:mm") %></a>
                        </div>
                    </div>
                </div>
                <%}%>
                
            </div>

            <!-- Sidebar Widget -->
           

            <!-- Sidebar Widget -->
          
        </div>

        <!-- >>>>>>>>>>>>>>>>>>>>
             Main Posts Area
        <<<<<<<<<<<<<<<<<<<<< -->
        <div class="mag-posts-content mt-30 mb-30 p-30 box-shadow">
            <!-- Trending Now Posts Area -->
            <div class="trending-now-posts mb-30">
                <!-- Section Title -->
                <div class="section-heading">
                    <h5>TOP 10 CHUYÊN MỤC</h5>
                </div>

                <div class="trending-post-slides owl-carousel">

                        <% for( var i = 0; i < top10of10.length ; i++){%>
                <!-- Single Trending Post -->
                <div class="single-trending-post">
                    <img src="<%= top10of10[i].imagePath%>" alt="">
                    <div class="post-content">
                        <div class="post-meta">
                            <a href="#" class="post-cata"><%= top10of10[i].tenChuyenMuc %></a>
                        </div>
                        <a href="#" class="post-title"><%= top10of10[i].tieuDe %></a>
                        <div class="post-meta" style="margin-top: 10px">
                            <a href="#"
                                class="post-cata"><%= moment(top10of10[i].ngayDang).format("DD-MM-YYYY HH:mm") %></a>
                        </div>
                    </div>
                </div>
                <%}%>   
                </div>
            </div>

            <!-- Feature Video Posts Area -->
           

            <!-- Most Viewed Videos -->
           

            <!-- Sports Videos -->
            <div class="sports-videos-area">
                <!-- Section Title -->
                <div class="section-heading">
                    <h5>ĐƯỢC XEM NHIỀU NHẤT</h5>
                </div>

                <div class="sports-videos-slides owl-carousel mb-30">

                    <% for( var i = 0; i < mostviews.length - 4; i++){%>
                <!-- Single Featured Post -->
                <div class="single-featured-post">
                    <!-- Thumbnail -->
                    <div class="post-thumbnail mb-50">
                        <% var path = mostviews[i].imagePath%>
                        <img src="<%= path%>" alt="">
                    </div>
                    <!-- Post Contetnt -->
                    <div class="post-content">
                        <div class="post-meta">
                            <a href="#"><%= moment(mostviews[i].ngayDang).format("DD-MM-YYYY HH:mm") %></a>
                            <a href="#"><%= mostviews[i].tenChuyenMuc %></a>
                        </div>
                        <a href="" class="post-title"><%= mostviews[i].tieuDe %></a>
                        <p><%= mostviews[i].noiDungTomTat %></p>
                    </div>
                    <!-- Post Share Area -->

                </div>
                <%}%>
                   

                </div>

                <div class="row">

                        <% for( var i = 6; i < mostviews.length; i++){%>
                <!-- Single Blog Post -->
                <div class="col-12 col-lg-6">
                    <div class="single-blog-post d-flex style-3 mb-30">
                        <div class="post-thumbnail">
                            <% var path = mostviews[i].imagePath%>
                            <img src="<%= path%>" alt="">
                        </div>
                        <div class="post-content">
                            <a href="single-post.html" class="post-title"><%= mostviews[i].tieuDe %></a>
                            <div class="post-meta">
                                <a href="#" style="margin-right: 0px;"><%= mostviews[i].tenChuyenMuc %></a>
                                <a style="margin-right: 0px;">-</a>
                                <a href="#"><%= moment(mostviews[i].ngayDang).format("DD-MM-YYYY HH:mm") %></a>
                            </div>
                        </div>
                    </div>
                </div>

                <%}%>

                </div>

            </div>
        </div>

        <!-- >>>>>>>>>>>>>>>>>>>>
         Post Right Sidebar Area
        <<<<<<<<<<<<<<<<<<<<< -->
        <!--Da bi xoa-->
    </section>
    <!-- ##### Mag Posts Area End ##### -->

    <!-- ##### Footer Area Start ##### -->
    <%- include('../layouts/TrangChu/footer') -%>
                <!-- ##### Footer Area End ##### -->

                <!-- ##### All Javascript Script ##### -->
                <!-- jQuery-2.2.4 js -->
                <script src="vendors/template/js/jquery/jquery-2.2.4.min.js"></script>
                <!-- Popper js -->
                <script src="vendors/template/js/bootstrap/popper.min.js"></script>
                <!-- Bootstrap js -->
                <script src="vendors/template/js/bootstrap/bootstrap.min.js"></script>
                <!-- All Plugins js -->
                <script src="vendors/template/js/plugins/plugins.js"></script>
                <!-- Active js -->
                <script src="vendors/template/js/active.js"></script>
</body>

</html>