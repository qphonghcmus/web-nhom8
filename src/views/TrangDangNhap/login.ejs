<!DOCTYPE html>
<html lang="en">

<head>
    <title>Đăng nhập</title>
    <%- include('../layouts/TrangChu/head') -%>
</head>

<body>
    <%- include('../layouts/TrangChu/navbar') -%>

    <!-- ##### Login Area Start ##### -->
    <div class="mag-login-area py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-lg-6">
                    <div class="login-content bg-white p-30 box-shadow">
                        <!-- Section Title -->
                        <div class="section-heading">
                            <h5>WELCOME TO WEB NEWS</h5>
                        </div>
                        <% if (err_message) { %>
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            <%=err_message%>
                        </div>
                        <% } %>

                        <form method="POST" action="">
                            <div class="form-group">
                                <input required autofocus type="text" class="form-control" id="exampleInputEmail1"
                                    name="username" placeholder="Email or User Name">
                            </div>
                            <div class="form-group">
                                <input required type="password" class="form-control" name="password"
                                    id="exampleInputPassword1" placeholder="Password">
                            </div>
                            <div class="form-group">
                                <div class="custom-control custom-checkbox mr-sm-2">
                                    <input type="checkbox" class="custom-control-input" id="customControlAutosizing">
                                    <label class="custom-control-label" for="customControlAutosizing">Nhớ mật
                                        khẩu</label>
                                    <a style="font-weight: 400; float:right" href="/forget-password">Quên mật khẩu</a>

                                </div>
                            </div>
                            <div style="text-align: center;">
                                <button type="submit" class="btn btn-login">Đăng nhập</button>
                                <button class="btn btn-register">
                                    <a href="/register">Đăng ký</a>
                                 </button>
                                 <button class="btn btn-register">
                                        <a href="/login/fb">FB</a>
                                     </button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ##### Login Area End ##### -->

    <!-- ##### Footer Area Start ##### -->
    <%- include('../layouts/TrangChu/footer') -%>
    <!-- ##### Footer Area End ##### -->

    <!-- ##### All Javascript Script ##### -->
    <!-- jQuery-2.2.4 js -->
    <script src="vendors/template/js/jquery/jquery-2.2.4.min.js"></script>
    <!-- Popper js -->
    <script src="vendors/template/js/bootstrap/popper.min.js"></script>
    <!-- Bootstrap js -->
    <script src="vendors/template/js/bootstrap/bootstrap.min.js"></script>
    <!-- All Plugins js -->
    <script src="vendors/template/js/plugins/plugins.js"></script>
    <!-- Active js -->
    <script src="vendors/template/js/active.js"></script>
</body>

</html>