<!DOCTYPE html>
<html lang="en">

<head>
    <title>Đăng ký</title>
    <%- include('../layouts/TrangChu/head') -%>
</head>

<body>
    <%- include('../layouts/TrangChu/navbar') -%>

     <!-- ##### Login Area Start ##### -->
    <div class="mag-login-area py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-lg-6">
                    <div class="login-content bg-white p-30 box-shadow">
                        <!-- Section Title -->
                        <div class="section-heading">
                            <h5>ĐĂNG KÝ TÀI KHOẢN</h5>
                        </div>

                        <form action="login.html" method="post">
                            <div class="form-group">
                                <input type="email" class="form-control" name="email" placeholder="Email or User Name">
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" name="password" placeholder="Password">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="password" placeholder="Full name">
                            </div>
                            <div class="form-group">
                                <input type="tel" class="form-control" name="sdt" placeholder="Phone number">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="birthDay" placeholder="Birth Day">
                            </div>
                            <div style="text-align: center;">
                                <button type="button" class="btn btn-register">Đăng ký tài khoản</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ##### Login Area End ##### -->

    <!-- ##### Footer Area Start ##### -->
    <%- include('../layouts/TrangChu/footer') -%>
                <!-- ##### Footer Area End ##### -->

                <!-- ##### All Javascript Script ##### -->
                <!-- jQuery-2.2.4 js -->
                <script src="vendors/template/js/jquery/jquery-2.2.4.min.js"></script>
                <!-- Popper js -->
                <script src="vendors/template/js/bootstrap/popper.min.js"></script>
                <!-- Bootstrap js -->
                <script src="vendors/template/js/bootstrap/bootstrap.min.js"></script>
                <!-- All Plugins js -->
                <script src="vendors/template/js/plugins/plugins.js"></script>
                <!-- Active js -->
                <script src="vendors/template/js/active.js"></script>
</body>

</html>