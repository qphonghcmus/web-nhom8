<!doctype html>
<html class="no-js" lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Editor</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%- include('./head') -%>
</head>

<body>

    <!-- preloader area start -->
    <div id="preloader">
        <div class="loader"></div>
    </div>
    <!-- preloader area end -->
    <!-- page container area start -->
    <div class="page-container">
        <!-- sidebar menu area start -->
        <div class="sidebar-menu">
            <div class="sidebar-header">
                <div class="logo">
                    <h1 class="font-weight-bold" style="color: white">Editor</h1>

                </div>
            </div>
            <div class="main-menu">
                <div class="menu-inner">
                    <nav>
                        <ul class="metismenu" id="menu">
                            <li
                                class="<% if( typeof(activeAdmin) != 'undefined' && activeAdmin === true){%> active <%}else{}  %>">
                                <a href="/editor/admin" aria-expanded="true">
                                    <i class="fas fa-tachometer-alt"></i><span>Trang chủ</span></a>
                            </li>
                            <li
                                class="<% if( typeof(activeUpdate) != 'undefined' && activeUpdate === true){%> active <%}else{}  %>">
                                <a href="/editor/update" aria-expanded="true"><i class="fas fa-user"></i>
                                    <span>Cập nhật thông tin</span>
                                </a>
                            </li>
                            <li
                                class="<% if( typeof(activeWait) != 'undefined' && activeWait === true){%> active <%}else{}  %>">
                                <a href="/editor/wait" aria-expanded="true"><i class="fas fa-file"></i>
                                    <span>Bài viết chờ xử lý</span>
                                </a>
                            </li>
                            <li
                                class="<% if( typeof(activeApprove) != 'undefined' && activeApprove === true){%> active <%}else{}  %>">
                                <a href="/editor/approve" aria-expanded="true"><i class="fas fa-file-signature"></i>
                                    <span>Bài viết đã duyệt</span>
                                </a>
                            </li>
                            <li
                                class="<% if( typeof(activeReject) != 'undefined' && activeReject === true){%> active <%}else{}  %>">
                                <a href="/editor/reject" aria-expanded="true"><i class="fas fa-file-excel"></i>
                                    <span>Bài viết đã từ chối</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
        <!-- sidebar menu area end -->
        <!-- main content area start -->
        <div class="main-content">
            <!-- header area start -->
            <div class="header-area">
                <div class="row align-items-center">
                    <!-- nav and search button -->
                    <div class="col-md-6 col-sm-8 clearfix">
                        <div class="nav-btn pull-left">
                            <span></span>
                            <span></span>
                            <span></span>
                        </div>
                        <div class="search-box pull-left">
                            <form action="#">
                                <input type="text" name="search" placeholder="Search..." required>
                                <i class="ti-search"></i>
                            </form>
                        </div>
                    </div>
                    <!-- profile info & task notification -->
                    <div class="col-md-6 col-sm-4 clearfix">
                        <div class="user-profile pull-right">
                            <h4 class="user-name dropdown-toggle" data-toggle="dropdown">
                                    <%= authUser.hoTen %>
                                    <i class="fa fa-angle-down"></i></h4>
                            <div class="dropdown-menu">
                                <form id="frmSignout" action="/logout" method="POST"></form>
                                <a class="dropdown-item" href="/editor/update">Settings</a>
                                <a class="dropdown-item" href="javascript: $('#frmSignout').submit();">Log Out</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- header area end -->
            <!-- page title area start -->
            <div class="page-title-area">
                <div class="row align-items-center">
                    <div class="col-sm-6 ">
                        <div class="breadcrumbs-area clearfix">
                            <h4 class="page-title pull-left ">
                                <% if( typeof(activeAdmin) != 'undefined' && activeAdmin === true){%> Trang chủ
                                <%}else{}  %>
                                <% if( typeof(activeUpdate) != 'undefined' && activeUpdate === true){%> Cập nhật thông
                                tin <%}else{}  %>
                                <% if( typeof(activeWait) != 'undefined' && activeWait === true){%> Bài viết chờ xử lý
                                <%}else{}  %>
                                <% if( typeof(activeApprove) != 'undefined' && activeApprove === true){%> Bài viết đã
                                duyệt <%}else{}  %>
                                <% if( typeof(activeReject) != 'undefined' && activeReject === true){%> Bài viết đã từ
                                chối <%}else{}  %>
                            </h4>

                        </div>
                    </div>
                </div>
            </div>
            <!-- page title area end -->
            <div class="main-content-inner">
                <div class="row">
                    <%- include(filename) -%>
                </div>
            </div>
        </div>
        <!-- main content area end -->
        <!-- footer area start-->
        <footer>
            <div class="footer-area">
                <p>Copyright©2019 - We are Web8-Team
                </p>
            </div>
        </footer>
        <!-- footer area end-->
    </div>
    <!-- page container area end -->

    <%- include('./foot') -%>

</body>

</html>